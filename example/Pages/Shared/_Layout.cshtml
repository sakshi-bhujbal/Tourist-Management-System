<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - example</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/example.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="https://cdn-icons-png.flaticon.com/128/1257/1257385.png" height="60">&nbsp; VoyageVista</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index"><img src="https://cdn-icons-png.flaticon.com/128/845/845022.png" height="30">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/flights"><img src="https://cdn-icons-png.flaticon.com/128/1085/1085493.png" height="30">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/contact"><img src="https://cdn-icons-png.flaticon.com/128/3095/3095583.png" height="30">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/aboutus"><img src="https://cdn-icons-png.flaticon.com/128/2274/2274794.png" height="30">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy"><img src="https://cdn-icons-png.flaticon.com/128/4395/4395316.png" height="30">Privacy</a>
                        </li>

                        <li class="nav-item" style="margin-left:750px">
                            <a class="nav-link text-dark" asp-area="" asp-page="/login"><img src="https://cdn-icons-png.flaticon.com/128/5087/5087592.png" height="50">Login</a>
                        </li>

                    </ul>
                </div>
            </div>
            <style>
                header {
                    background: rgba(160, 9, 210, 0.05);
                    color: whitesmoke;
                    
                }



                .nav-item {
                    margin-right: 30px;
                }
            </style>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <center>
                &copy; 2024 &nbsp; <a asp-area="" asp-page="/Index">VoyageVista</a>
            </center>
        </div>
        <style>
            footer {
                height: 70px;
                background: rgba(160, 9, 210, 0.05);
                color: whitesmoke;
            }
        </style>

    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>